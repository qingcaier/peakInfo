<view>
    <v-order orderData="{{orderData}}" shopData="{{shopData}}" makerData="{{makerData}}"></v-order>
    <view wx:if="{{!isComplete&&!isCancel}}" class="all_btn">
        <button class="btn" size="mini" type="default" bindtap="complete">完成拼单</button>
        <button class="btn" size="mini" type="default" bindtap="modify">修改拼单</button>
        <button class="btn" size="mini" type="default" bindtap="cancel">取消拼单</button>
    </view>
    <view wx:if="{{isComplete}}" class="showText">已完成</view>
    <view wx:if="{{isCancel}}" class="showText">已取消</view>
    <mp-halfScreenDialog wx:if="{{isComplete||isCancel}}" bindbuttontap="goHome" title="测试标题B" subTitle="测试标题B的副标题" desc="辅助描述内容，可根据实际需要安排" tips="辅助提示内容，可根据实际需要安排" buttons="{{buttons}}"></mp-halfScreenDialog>
    <view class="showText">
        <button class="btn" type="primary" bindtap="goHome">返回首页</button>
    </view>
</view>