.board {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.header {
  display: flex;
  width: 120rpx;
  height: 40rpx;
  align-items: center;
  justify-content: space-between;
}

.img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.msg {
  font-size: 20rpx;
  margin-top: 7.5px;

  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.name {
  width: 100%;
  font-size: 40rpx;
  margin-top: 0;
  /* font-weight: bold; */
}

